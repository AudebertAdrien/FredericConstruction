<div class="container">
    <%= form_with do %>
    <div class="form-row">
        <div class="form_group col-sm-6">
            <%= label_tag(:inputLastName, "Nom") %>
            <%= text_field_tag(:inputLastName, "", class: "form-control", placeholder: "Ex: Launey") %>
        </div>
        <div class="form_group col-sm-6">
            <%= label_tag(:inputFirstName , "Prenom:") %>
            <%= text_field_tag(:inputFirstName, "", class: "form-control", placeholder: "Ex: François") %>
        </div>
    </div>
    <div class="form-row">
        <div class="form_group col-sm-6">
            <%= label_tag(:inputEmail, "Email") %>
            <%= email_field_tag(:inputEmail, "", class: "form-control", placeholder: "Ex: FrancoisLauney@gmail.com") %>
        </div>
        <div class="form_group col-sm-6">
            <%= label_tag(:inputTown, "Ville") %>
            <%= text_field_tag(:inputTown, "", class: "form-control", placeholder: "Ex: Bordeaux") %>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-sm-12">
            <%= label_tag(:inputMessage, "Message") %>
            <%= text_area(:inputMessage, "", rows: 8, class: "form-control", placeholder: "Je souhaite réaliser des traveaux..." ) %>
        </div>
    </div>
    <div class="col-sm-2 mx-auto text-center">
        <%= submit_tag("Envoyer", class: "btn text-white")%>
    </div>
    <% end %>
</div>